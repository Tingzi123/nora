<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/bg_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/bg_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/beijing" />
        <View
            android:id="@+id/strut"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/bg_head"
            android:layout_centerHorizontal="true"/>


        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/bg_head"
            android:layout_toLeftOf="@id/strut"
            android:layout_marginTop="15dp"
            android:paddingRight="20dp"
            android:gravity="right"
            android:background="@drawable/wode_text_rightline"
            android:text="大脸猫"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:paddingLeft="20dp"
            android:layout_below="@id/bg_head"
            android:layout_toRightOf="@id/strut"
            android:background="@drawable/wode_text_leftline"
            android:text="桃酱"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/text1"
            android:layout_toLeftOf="@id/strut"

            android:paddingRight="20dp"
            android:gravity="right"
            android:background="@drawable/wode_text_rightline"
            android:text="此心安处是吾乡"
            android:textSize="11dp"/>
        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"

            android:paddingLeft="20dp"
            android:layout_below="@id/text2"
            android:layout_toRightOf="@id/strut"
            android:background="@drawable/wode_text_leftline"
            android:text="喵龄 10个月"
            android:textSize="11dp"/>

        <TextView
            android:id="@+id/text5"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/text3"
            android:layout_toLeftOf="@id/strut"
            android:paddingBottom="4dp"

            android:paddingRight="20dp"
            android:gravity="right"
            android:background="@drawable/wode_text_rightline"
            android:text="山东烟台"
            android:textSize="11dp"/>
        <TextView
            android:id="@+id/text6"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:paddingBottom="4dp"
            android:paddingLeft="20dp"
            android:layout_below="@id/text4"
            android:layout_toRightOf="@id/strut"
            android:layout_marginBottom="10dp"
            android:background="@drawable/wode_text_leftline"
            android:drawableBottom="@mipmap/down"
            />

    </RelativeLayout>
</LinearLayout>