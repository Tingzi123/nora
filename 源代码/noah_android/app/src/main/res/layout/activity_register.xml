        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5.5dp"
                android:layout_toLeftOf="@id/text_register_username"
                android:src="@mipmap/user" />

            <EditText
                android:id="@+id/text_register_username"
                android:layout_width="275dp"
                android:layout_height="35dp"
                android:gravity="bottom"
                android:layout_marginLeft="15dp"
                android:hint="请输入用户名"
                android:background="@drawable/login_text_line" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5.5dp"
                android:layout_toLeftOf="@id/text_registerpassword"
                android:src="@mipmap/register_password" />

            <EditText
                android:id="@+id/text_registerpassword"
                android:layout_width="275dp"
                android:layout_height="35dp"
                android:gravity="bottom"
                android:layout_marginLeft="15dp"
                android:hint="请输入密码"
                android:background="@drawable/login_text_line" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5.5dp"
                android:layout_toLeftOf="@id/text_registerpassword2"
                android:src="@mipmap/register_password2" />

            <EditText
