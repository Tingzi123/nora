<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/baba"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/jiuyuan"
        android:paddingBottom="10dp"
        >

        <ImageView
            android:id="@id/baba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:alpha="0.9"
            android:src="@mipmap/jiuyuanbeijing"/>

        <ImageView
            android:id="@+id/touxiang"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="15dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/shezhi"/>

        <TextView
            android:id="@+id/name_damowang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/touxiang"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="15dp"
            android:text="松鼠狗大魔王"
            android:textSize="18dp"
            android:textColor="#FFF"
            android:drawableRight="@mipmap/shimingrenzheng"
            android:drawablePadding="4dp"/>

        <TextView
            android:id="@+id/zuobiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_damowang"
            android:layout_toRightOf="@id/touxiang"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="广东 广州"
            android:textSize="11dp"
            android:textColor="#FFF"
            android:drawableLeft="@mipmap/zuobiao"
            android:drawablePadding="5dp"/>

        <TextView
            android:id="@+id/zuzhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/zuobiao"
            android:layout_toRightOf="@id/touxiang"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="广东动物保护组织筹款"
            android:textSize="17dp"
            android:textColor="#FFF"
            />

        <Spinner android:id="@+id/Spinner01"
            android:layout_marginRight="22dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_alignParentRight="true"/>

        <RelativeLayout
            android:id="@+id/baikuang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="28dp"
            android:paddingLeft="28dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_below="@id/zuzhi"
            android:orientation="vertical"
            android:background="@drawable/jiuyuan_xialakuang_bg"
            android:elevation="2dp">
            <View
                android:id="@+id/strut"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_below="@id/jindutiao"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/strut"
                android:layout_marginBottom="23dp"
                android:layout_toLeftOf="@id/strut"
                android:layout_marginRight="3dp"
                android:drawableBottom="@mipmap/dakuohao"
                android:text="46%"
                android:textSize="12dp" />
            <ProgressBar
                android:id="@+id/jindutiao"
                android:layout_marginTop="48dp"
                android:layout_centerHorizontal="true"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="425dp"
                android:layout_height="17dp"
                android:max="100"
                android:progress="46"
                android:progressDrawable="@drawable/progress_red" />
            <TextView
                android:id="@+id/yihuozijin"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/jindutiao"
                android:layout_toLeftOf="@id/strut"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:textSize="12dp"
                android:text="已获资金"/>
            <TextView
                android:id="@+id/zijinmubiao"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/jindutiao"
                android:layout_toRightOf="@id/strut"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:textSize="12dp"
                android:text="资金目标"/>
            <TextView
                android:id="@+id/yihuoshuzi"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/yihuozijin"
                android:layout_toLeftOf="@id/strut"
                android:gravity="center"
                android:textSize="20dp"
                android:text="4.6"/>
            <TextView
                android:id="@+id/mubiaoshuzi"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/zijinmubiao"
                android:layout_toRightOf="@id/strut"
                android:gravity="center"
                android:textSize="20dp"
                android:text="10"/>

            <TextView
                android:id="@+id/xialawenben"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/yihuoshuzi"
                android:visibility="visible"
                android:layout_marginTop="12dp"
                android:paddingTop="5dp"
                android:background="@drawable/xialawenben_top_line"
                android:text="@string/xialawenben"
                android:textSize="16dp"
                />

            <ImageView
                android:id="@+id/xialajiantou"
                android:layout_width="14dp"
                android:layout_height="20dp"
                android:layout_below="@id/xialawenben"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/xiangxiajiantou" />
        </RelativeLayout>
    </RelativeLayout>
    <com.wuxiaolong.pullloadmorerecyclerview.PullLoadMoreRecyclerView
        android:id="@+id/preView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFECEC"
        />
</LinearLayout>